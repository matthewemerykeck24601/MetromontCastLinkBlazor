@namespace MetromontCastLink.Components
@using MetromontCastLink.Client.Services
@using Microsoft.AspNetCore.Components.Authorization
@using MetromontCastLink.Shared.Services

<Router AppAssembly="typeof(Program).Assembly"
        AdditionalAssemblies="new[] { typeof(MetromontCastLink.Client._Imports).Assembly }">
    <Found Context="routeData">
        <RouteView RouteData="routeData" DefaultLayout="typeof(MetromontCastLink.Client.Components.Layout.MainLayout)" />
        <FocusOnNavigate RouteData="routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="typeof(MetromontCastLink.Client.Components.Layout.MainLayout)">
            <div class="not-found-container">
                <h1>404</h1>
                <h2>Page Not Found</h2>
                <p>Sorry, the page you're looking for doesn't exist.</p>
                <a href="/" class="btn btn-primary">Go to Home</a>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<style>
    .not-found-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 60vh;
        text-align: center;
        padding: 2rem;
    }

        .not-found-container h1 {
            font-size: 4rem;
            font-weight: 700;
            color: #e2e8f0;
            margin: 0 0 1rem 0;
        }

        .not-found-container h2 {
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
            margin: 0 0 0.5rem 0;
        }

        .not-found-container p {
            margin: 0 0 1.5rem 0;
            color: #64748b;
        }

    .btn {
        display: inline-block;
        padding: 0.75rem 1.5rem;
        background: #6366f1;
        color: white;
        text-decoration: none;
        border-radius: 0.5rem;
        font-weight: 500;
        transition: all 0.2s;
        border: none;
        cursor: pointer;
    }

        .btn:hover {
            background: #4f46e5;
            transform: translateY(-1px);
        }
</style>