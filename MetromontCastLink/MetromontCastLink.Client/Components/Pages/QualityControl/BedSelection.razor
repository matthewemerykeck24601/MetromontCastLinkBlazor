        align-items: center;
        gap: 1rem;
    }

        .header-content h2 {
            margin: 0;
            font-size: 1.5rem;
            font-weight: 600;
            color: #1e293b;
        }

    .selection-container {
        display: flex;
        justify-content: center;
    }

    .selection-card {
        background: white;
        border-radius: 12px;
        padding: 2rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.06);
